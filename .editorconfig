# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for all files
[*]
indent_style = space
indent_size = 4

# Specific overrides for certain file types if needed
[*.{js,jsx,ts,tsx,json,css,html,vue}]
indent_style = space
indent_size = 4

# Package.json and other JSON files
[*.json]
indent_style = space
indent_size = 4

# CSS and related files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 4